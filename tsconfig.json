{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "dom",
            "es5",
            "es2015.promise"
        ],
        "module": "es2015",
        "moduleResolution": "node",
        "allowJs": true,
        "isolatedModules": false,
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        // "removeComments": true,
        "suppressImplicitAnyIndexErrors": true,
        "allowSyntheticDefaultImports": true
        // "sourceMap": true
    },
    "compileOnSave": false,
    "include": [
        "./src/**/*"
    ]
}